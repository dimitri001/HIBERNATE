<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence" version="1.0">
	<persistence-unit name="ProductoService" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
			<property name="hibernate.connection.username" value="UsuarioCurso"/>
			<property name="hibernate.connection.password" value="UserHiber"/>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/curso_hibernate_user"/>
		</properties>
	</persistence-unit>
</persistence>